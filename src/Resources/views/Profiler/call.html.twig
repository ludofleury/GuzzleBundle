<div id="call_{{ index }}" class="request {{ call.request.method|lower }}">
    <div class="summary">
        <div class="status icon {% if call.error %}error{% else %}success{% endif %}"></div>
        <h3>
            <span class="method">{{ call.request.method }}</span>
            <span class="path">{{ call.request.path }}</span>
        </h3>
        <div class="code">
            <abbr title="{{ call.response.reasonPhrase }}">{{ call.response.statusCode }}</abbr>
        </div>
    </div>

    <div class="details">
        <ul class="nav nav-tabs">
            <li class="active">
                <a href="#request_{{ index }}" data-toggle="tab">Request</a>
            </li>
            <li>
                <a href="#response_{{ index }}" data-toggle="tab">Response</a>
            </li>
        </ul>

        <div class="tab-content">
            {% include 'PlaybloomGuzzleBundle:Profiler:request.html.twig' with {'index':index, 'request': call.request, 'time': call.time} %}
            {% include 'PlaybloomGuzzleBundle:Profiler:response.html.twig' with {'index':index, 'response':call.response} %}
        </div>
    </div>
</div>
